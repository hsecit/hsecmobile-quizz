<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/home_bg"
    tools:context="tech.hsecmobile.quizzstar.Activity.ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="false"
        android:background="@color/home_bg"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_bg">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                app:titleTextColor="#ffffff"
                app:subtitleTextColor="#ffffff"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:elevation="0dp"/>
            <View
                android:layout_below="@+id/profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/home_design"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                app:civ_border_width="5dp"
                android:layout_marginTop="30dp"
                app:civ_border_color="@color/colorAccent"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_bg"
                android:layout_below="@id/profile_image">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:background="@drawable/text_background"
                    android:backgroundTint="@color/colorPrimary">
                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/member_since"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/profile_points"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <Button
                    android:id="@+id/edit_profile"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/edit_profile"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@color/white"
                    android:background="@drawable/text_background"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/earnings_btn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/fragment_profile_earnings"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:background="@drawable/text_background"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/withdrawals_btn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/fragment_profile_withdrawals"
                        android:layout_marginLeft="10dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/text_background"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ads_linear_profile"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_background"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/leaderboard_btn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/fragment_profile_leader"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        style="?android:attr/borderlessButtonStyle"
                        android:background="@drawable/text_background"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/statistics_btn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/fragment_profile_stats"
                        android:layout_marginLeft="10dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/text_background"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <Button
                    android:id="@+id/profile_logout"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/fragment_profile_logout"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@color/white"
                    android:background="@drawable/text_background"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/banner_container_profile_activity"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />
</RelativeLayout>