<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="tech.hsecmobile.quizzstar.Activity.LeaderboardsActivity"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/leaderboards_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/cgradient1"
                app:titleTextColor="#ffffff"
                app:subtitleTextColor="#ffffff"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:elevation="0dp"/>
            <ImageView
                android:id="@+id/crown"
                android:layout_below="@id/leaderboards_toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/crown"/>
            <LinearLayout
                android:id="@+id/leader_linear_1"
                android:layout_below="@id/crown"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/first_player_image"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:civ_border_width="5dp"
                    android:layout_marginBottom="8dp"
                    app:civ_border_color="@color/golden"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/first_player_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/leader_linear_2"
                android:layout_below="@id/leader_linear_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/second_player_image"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:civ_border_width="4dp"
                        android:layout_marginBottom="8dp"
                        app:civ_border_color="@color/silver"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/second_player_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tirth_player_image"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:civ_border_width="4dp"
                        android:layout_marginBottom="8dp"
                        app:civ_border_color="@color/bronze"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tirth_player_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/leader_ads_linear"
                android:layout_below="@+id/leader_linear_2"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@drawable/text_background"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/home_bg"
                android:id="@+id/all_players_recycler"
                android:layout_below="@+id/leader_ads_linear"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/banner_container_leader_activity"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />
</RelativeLayout>