<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/home_bg"
    tools:context="tech.hsecmobile.quizzstar.Activity.RequestWithdrawalActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_withdrawals_request"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/cgradient1"
        app:titleTextColor="#ffffff"
        app:subtitleTextColor="#ffffff"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp" />
    <View
        android:layout_below="@id/toolbar_withdrawals_request"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/home_design"/>
    <TextView
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/home_banner"
        android:id="@+id/req_withdrawal_title"
        android:text="@string/request_withdrawal_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@id/req_withdrawal_title"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/request_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/withdraw_request"/>
        <TextView
            android:id="@+id/select_method_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/request_withdrawal_activity_select"
            android:layout_below="@id/request_image"/>
        <Spinner
            android:id="@+id/spinner_payment_methods"
            android:layout_below="@id/select_method_title"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:tooltipText="Select a payment method"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/select_payment_infos_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/request_withdrawal_activity_payment_infos"
            android:layout_below="@id/spinner_payment_methods"/>
        <EditText
            android:id="@+id/payment_infos_edittext"
            android:layout_below="@id/select_payment_infos_title"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Payment Infos ..."
            android:inputType="text"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>
        <Button
            android:id="@+id/send_request_button"
            android:layout_below="@id/payment_infos_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/text_background"
            android:text="@string/request_withdrawal_activity_send_request"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>