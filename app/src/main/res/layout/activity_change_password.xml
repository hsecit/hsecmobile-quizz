<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="tech.hsecmobile.quizzstar.Activity.ChangePasswordActivity"
    android:gravity="center">

    <ImageView
        android:id="@+id/send_image_complete"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/change_password"/>

    <TextView
        android:id="@+id/send_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_image_complete"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/change_password_title"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/change_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/send_title"
        android:layout_marginBottom="10dp"
        android:text="@string/change_password_enter_pass"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/change_password_new"
        android:layout_below="@id/change_title"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/home_bg"
        android:hint="@string/change_password_enter_pass"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/change_password_new"
        android:layout_marginBottom="10dp"
        android:text="@string/change_password_confirm_pass"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/confirm_password_new"
        android:layout_below="@id/confirm_title"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/home_bg"
        android:hint="@string/change_password_confirm_pass"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>
    <Button
        android:id="@+id/save_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/confirm_password_new"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/colorAccent"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/save"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>