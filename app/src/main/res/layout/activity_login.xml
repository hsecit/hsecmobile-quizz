<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:nestedScrollingEnabled="false"
    android:fillViewport="true"
    android:id="@+id/categories_scroll"
    android:background="@color/home_bg"
    tools:context="tech.hsecmobile.quizzstar.Activity.LoginActivity"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/cgradient1">
    <ImageView
        android:id="@+id/login_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/login"/>
    <TextView
        android:id="@+id/login_title"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_below="@id/login_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_page_title"/>
    <TextView
        android:id="@+id/login_subtitle"
        android:layout_below="@id/login_title"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_page_subtitle"/>
    <EditText
        android:id="@+id/login_email"
        android:layout_below="@id/login_subtitle"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/home_bg"
        android:hint="Your Email"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:id="@+id/login_password"
        android:layout_below="@id/login_email"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/home_bg"
        android:hint="Your Password"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_login"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/login_password"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="start"
            android:layout_weight="1"
            android:text="@string/login_forgot_password"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/new_member"
            android:textColor="@color/white"
            android:gravity="right"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_new_member"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/linear_login"
        tools:ignore="NotSibling" />

    <Button
        android:id="@+id/login_button"
        android:layout_below="@id/login_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/text_background"
        android:text="Login"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_below="@id/login_button"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/red"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/api_login_error"/>
    <View
        android:id="@+id/view"
        android:layout_below="@id/api_login_error"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/social_login_title"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:text="@string/login_continue_with"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/social_login_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_button"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        <Button
            android:paddingLeft="10dp"
            android:id="@+id/facebook_login_button_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:background="@drawable/fb_btn"
            android:backgroundTint="@color/com_facebook_button_background_color"
            android:drawableLeft="@drawable/ic_facebook"
            android:layout_marginRight="10dp"
            android:textAlignment="textStart"
            android:drawablePadding="15dp"
            android:text="Facebook"/>
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>