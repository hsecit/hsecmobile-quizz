<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="65dp">
        <TextView
            android:id="@+id/all_player_rank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="@color/home_bg"
            android:id="@+id/all_player_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/all_player_rank"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/all_player_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textSize="14sp"
            android:layout_toRightOf="@id/all_player_image"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/all_player_points"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:text=""
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>